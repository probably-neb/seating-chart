{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro"],
    "exclude": ["node_modules"]
}
